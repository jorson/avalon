@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .tbody-hide {
        display:none;
    }
    .tbody-show{
        display:normal;
    }
</style>

<div class="container-fluid">
    <div id="searcher">
        <form class="well form-search">
            <label class="control-label">
                用户名: <input type="text" class="input-medium" />
            </label>
            <label class="control-label">
                枚举对象: <select class="input-medium"></select>
            </label>
            <button class="btn btn-primary">查询</button>
            <button class="btn btn-info">添加</button>
        </form>
    </div>
    <div id="data">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>用户名</th>
                    <th>枚举字段</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody data-bind="css: {'tbody-show': model.list().length==0, 'tbody-hide': model.list().length>0}">
                <tr>
                    <td colspan="10">
                        <div style="height: 80px; line-height: 80px; text-align: center;">暂无数据</div>
                    </td>
                </tr>
            </tbody>
            <tbody data-bind="foreach: model.list, css: {'tbody-show': model.list().length>0, 'tbody-hide': model.list().length==0}">
                <tr>
                    <td data-bind="text: UserId"></td>
                    <td data-bind="text: UserName"></td>
                    <td data-bind="text: EnField"></td>
                    <td>
                        <a class="btn btn-primary" href="javascript:void(0)" data-bind="click: function(){ $root.showEditor($data.UserId)}">修改</a>
                        <a class="btn btn-danger" href="javascript:void(0)" data-bind="click: function(){ $root.deleteItem($data.UserId)}">删除</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">请输入购买数量</h3>
    </div>
    <div class="modal-body">
        <form class="form-horizontal">
            <div class="control-group">
                <label class="control-label" for="RealName">购买数量</label>
                <div class="control">
                    <div class="input-append">
                        <input type="text" id="RealName" name="RealName" placeholder="请填写购买数量" />
                        <span class="add-on">件</span>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary">确认购买</button>
        <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
    </div>
</div>

@section Foot{
    <script src="@Url.Content("~/Content/curd_index.js")" type="text/javascript"></script>
}
